{
  "manifest_version": 2,
  "name": "Style",
  "version": "1.0.0",
  "description":"Style Change Extension(Solarized)",
  "icons":
  {
    "16":"img/16.png",
    "48":"img/48.png",
    "128":"img/128.png"
  },
  "background":
  {
    "scripts": ["js/background.js"]
  },
  "browser_action":
  {
    "default_icon": "img/16.png",
    "default_title": "Style Change",
    "default_popup": "html/popup.html"
  },
  "content_scripts":
  [
    {
      // "matches": ["<all_urls>"],
      "matches": ["*://cs.chromium.org/*"],
      // "js": ["content_scripts.js"],
      "css": ["css/chromium.css"],
      "run_at": "document_start"
    }
  ],
  "permissions":
  [
    "contextMenus",       // 右键菜单
    "tabs",               // 标签
    "notifications",      // 通知
    "webRequest",         // web 请求
    "webRequestBlocking",
    "storage",            // 插件本地存储
    "http://*/*",         // 可以通过 executeScript 或者 insertCSS 访问的网站
    "https://*/*"         // 可以通过 executeScript 或者 insertCSS 访问的网站
  ]
}
